---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Personal portfolio and photography website" } = Astro.props;

import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import MovingBanner from '../components/MovingBanner.astro';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Font preloading for better performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jersey+10:wght@400&family=Jersey+20+Charted:wght@400&display=swap" rel="preload" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link href="https://fonts.googleapis.com/css2?family=Jersey+10:wght@400&family=Jersey+20+Charted:wght@400&display=swap" rel="stylesheet"></noscript>
    
    <title>{title}</title>
  </head>
  <body class="font-sans antialiased bg-white text-gray-900">
    <MovingBanner />
    <Header />

    <main class="pt-8">
      <div class="max-w-[1000px] mx-auto px-4 sm:px-6 lg:px-8">
        <slot />
      </div>
    </main>

    <Footer />
  </body>
</html>