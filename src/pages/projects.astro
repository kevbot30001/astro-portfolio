            <p class="text-sm text-gray-600">A selection of things I've worked on.</p>
          </SidebarCard>

          <SidebarCard title="Contact" class="ml-1">
            <a href="mailto:hello@yourname.dev" class="text-blue-600 hover:underline">Email me</a>
          </SidebarCard>
        </div>

        <main class="lg:col-span-3 space-y-8">
          <MainSection title="Projects" icon="ðŸ§°">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <!-- Example Project Card -->
              <div class="bg-white border-2 border-black p-4">
                <div class="flex items-start gap-4">
                  <div class="w-20 h-20 bg-gray-100 rounded-md flex items-center justify-center border-2 border-black">ðŸ§©</div>
                  <div>
